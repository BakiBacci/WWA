{% extends "front/base.html.twig" %}

{% block title %}
	{{ parent()}}Detail
{% endblock %}


{% block body %}
	<main>
		<p class="mb-3">
			<a href="{{ path('front_home_index') }}" class="btn btn-primary">Retour à la liste</a>
		</p>
		{% if product is not null %}
			<div class="border rounded p-4">
				<h1 class="display-4">{{ product.name }}</h1>
				<p class="lead">{{ product.description }}</p>
				{% if product.image %}
					<img src="{{ asset(product.image) }}" class="w-50 img-fluid rounded mb-3" alt="{{ product.name }}">
				{% endif %}
				<hr class="my-4">
				<div class="row">
					<div class="col-md-6">
						<h5>Prix</h5>
						<p>{{ product.price }}
							€</p>
					</div>
					<div class="col-md-6">
						<h5>Catégorie</h5>
						<p>{{ product.category.name ?? 'N/A' }}</p>
					</div>
				</div>

			</div>
		{% else %}
			<p>Produit non trouvé.</p>
		{% endif %}
	</main>
{% endblock %}
