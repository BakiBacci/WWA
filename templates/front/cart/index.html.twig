{% extends 'front/base.html.twig' %}

{% block title %}
	{{ parent()}}Panier!
{% endblock %}

{% block body %}
	<main>
		<h1>Panier</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Produit</th>
					<th>Produit</th>
					<th>Quantité</th>
					<th>Total</th>
					<th>Action</th>
				</tr>
			</thead>
			{% for data in dataCart %}
				<tr>
					<td>{{ data.product.name }}</td>
					<td>{{ data.product.price }}</td>
					<td>{{ data.quantity }}</td>
					<td>{{ data.total }}</td>
					<td>
						<a href="" class="btn btn-warning">+</a>
						{# Quand on appuye sur + dans le tableau de session ça ajoute +1 au produit en question #}
						<a href="" class="btn btn-danger">-</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</main>
{% endblock %}
