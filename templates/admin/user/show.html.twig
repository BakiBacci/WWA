{% extends "admin/base.html.twig" %}

{% block title %}
	{{ parent() }}Details de l'utilisateur
{% endblock %}

{% block body %}
	<h1>Utilisateur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Mot de passe</th>
				<td>{{ user.firstName ~ ' ' ~ user.lastName }}
				</td>
			</tr>
			<tr>
				<th>Adresse</th>
				<td>{{ user.address }}{{ user.zipCode }}{{ user.city }}</td>
			</tr>
			<tr>
				<th>Date de crÃ©ation</th>
				<td>{{ user.createdAt|date('d/m/Y H:i') }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles|join(', ') }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
